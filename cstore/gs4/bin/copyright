#!/usr/bin/env python2.7
# -*- mode: python -*-

'''
Add, modify or delete copyright data for the specified product.

Usage:

copyright <product> <jid> <text>
copyright <product> <jid>
copyright <product> del <jid>

'''

import os
import sys

sys.path.append(os.path.join(os.path.dirname(__file__), '../lib'))

import copyrightmgr


def main(argv):
    try:
        product = argv[1]
        args = argv[2:]
        copyrightmgr.CLI(product, args)
    except RuntimeError as exc:
        print exc.message
        exit(1)
    except IndexError:
        copyrightmgr.CLI()

if __name__ == '__main__':
    main(sys.argv)
