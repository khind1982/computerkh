# -*- mode: shell-script -*-
#
# Called from bash_profile.dsol and bashrc.dsol to import global alias
# and function definitions into all user shells, whether they are login
# shells or not.

# If the global alias and functions definitions exist, suck them in.
if [ -f ${DSOLETC}/bash.aliases ]
then
    . ${DSOLETC}/bash.aliases
fi

if [ -f ${DSOLETC}/bash.functions ]
then
    . ${DSOLETC}/bash.functions
fi

if [ -f ${DSOLETC}/bash_completion ]
then
    . ${DSOLETC}/bash_completion
fi